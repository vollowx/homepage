---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import Link from '../components/Link.astro'
---

<Layout title="home">
  <section>
    <div class="mb-2">
      <h1 class="mb-2 text-xl font-bold">vollow</h1>
      <div class="text-overlay2">
        <span>now at</span>
        <span class="time">UTC+8</span>
        <script is:inline>
          const queryTime = () => {
            return new Date().toLocaleString('en-US', {
              timeZone: 'Asia/Shanghai',
              hour: 'numeric',
              minute: 'numeric',
              second: 'numeric',
              hourCycle: 'h23',
            })
          }

          const timeE = document.querySelector('.time')
          timeE.textContent = queryTime()
          setInterval(() => (timeE.textContent = queryTime()), 1000)
        </script>
      </div>
      <div class="text-overlay2">code in frontend, c/c++, go and zig</div>
      <div class="text-overlay2">
        passionate in linux, free softwares and making them aesthetic
      </div>
    </div>
    <ul class="animated-list grid grid-cols-1 sm:grid-cols-2">
      <Card title="email">
        <Link href="mailto:hi@v9.nz" body="hi@v9.nz" />
      </Card>
      <Card title="code">
        <Link href="https://github.com/vollowx/" body="github" />
        <Link href="https://gitlab.com/vollowx/" body="gitlab" />
        <Link href="https://codeberg.org/vollowx/" body="codeberg" />
      </Card>
      <Card title="projects">
        <Link
          href="https://seele.v9.nz/"
          body="seele"
        />
        <Link
          href="https://github.com/vollowx/gotodo/"
          body="gotodo"
        />
        <Link
          href="https://github.com/vollowx/wp-swayidle/"
          body="wp-swayidle"
        />
        <Link
          href="https://github.com/vollowx/bilibili-catppuccin/"
          body="bilibili-catppuccin"
        />
      </Card>
      <Card title="participating">
        <Link
          href="https://github.com/catppuccin/nvim/"
          body="catppuccin/nvim"
        />
      </Card>
    </ul>
  </section>
</Layout>
