---
import Layout from '../../layouts/Layout.astro'
import Card from '../../components/Card.astro'
import Link from '../../components/Link.astro'

const allPosts = Object.values(import.meta.glob('./*.md', { eager: true }))
const uniqueTags = [
  ...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat()),
]
---

<Layout title="blog">
  <section>
    <div class="mb-2">
      <h1 class="mb-2 text-xl font-bold">blog</h1>
    </div>
    <ul class="animated-list grid grid-cols-1 sm:grid-cols-2">
      <Card title="tags">
        {
          uniqueTags.map((tag: string) => (
            <Link href={'/tags/' + tag} body={tag} />
          ))
        }
      </Card>
      <Card title="posts">
        {
          allPosts.map((post: any) => (
            <Link href={post.url} body={post.frontmatter.title} />
          ))
        }
      </Card>
    </ul>
  </section>
</Layout>
