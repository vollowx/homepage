---
interface Props {
  title: string
}

const { title } = Astro.props

import Link from '../components/Link.astro'
import ThemeSelector from '../components/ThemeSelector.astro'
import CatppuccinWebring from '../components/CatppuccinWebring.astro'
---

<!doctype html>
<html
  lang="en"
  class="mocha scroll-smooth font-sans text-text bg-base antialiased selection:bg-surface1 leading-relaxed"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Frontend and C/C++ Developer" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - vollow</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="mx-auto max-w-3xl px-6 pt-16 pb-20 flex flex-col min-h-dvh">
      <header class="mb-10 flex gap-4" style="view-transition-name: header;">
        <Link href="/" body="home" />
        <Link href="/blog" body="blog" />
      </header>
      <main class="mb-5 flex-1">
        <slot />
      </main>
      <footer
        class="flex flex-wrap gap-4"
        style="view-transition-name: footer;"
      >
        <CatppuccinWebring />
        <span class="flex-1"></span>
        <Link href="https://github.com/vollowx/homepage" body="source code" />
        <ThemeSelector />
      </footer>
    </div>
  </body>
</html>
<style is:global>
  * {
    -webkit-tap-highlight-color: transparent;
  }

  a {
    @apply underline decoration-surface2 decoration-2 underline-offset-4 transition-colors duration-300 hover:decoration-overlay2 active:decoration-overlay1;
  }

  @media (hover: hover) and (pointer: fine) {
    .animated-list li {
      @apply transition-all duration-300;
    }

    .animated-list:hover li {
      @apply opacity-50;
    }

    .animated-list:hover li:hover {
      @apply opacity-100;
    }
  }

  @view-transition {
    navigation: auto;
  }

  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation: fade 0.3s ease both;
  }

  @keyframes fade {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
